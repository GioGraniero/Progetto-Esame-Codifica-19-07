                        <subst><del>giovarmi </del><add place="supralinear">concorrere</add></subst>, perchè io colga gloria sul
                        <lb xml:id="LL1.13.I_lb_1f4" n="4" facs="#LL1.13.I_line_1f4"/>
                        suolo della mia <rs type="country">Patria</rs>.
                        </s>
                        <salute>
                        <s type="sentence" n="s_02">
                        <lb xml:id="LL1.13.I_lb_1f5" n="5" facs="#LL1.13.I_line_1f5"/>
